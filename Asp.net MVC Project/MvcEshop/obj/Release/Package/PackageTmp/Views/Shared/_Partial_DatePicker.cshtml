@model int?

<link href="~/Content/jquery-ui-1.8.14.css" rel="stylesheet" />
<script src="~/Scripts/DatePicker/jquery-1.6.2.min.js"></script>
<script src="~/Scripts/DatePicker/jquery.ui.datepicker-cc.all.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {

        //var text= $("#AllocatedVolume").val().replace('/', '.');
        //$("#AllocatedVolume").val(text);


        $("input.datePicker").datepicker(

            {
                //if we want to use datepicker for choosing birthdate
                @if (Model==1)
                    {

                    <text>
                dateFormat: 'yy/mm/dd',
                autoSize: true,
                changeMonth: true,
                changeYear: true,
                yearRange: '1280:1395'
                </text>

                    }
                    
                else
                {
                 <text>
                dateFormat: 'yy/mm/dd',
                autoSize: true
                </text>
                }


    }
            );

    });

</script>
