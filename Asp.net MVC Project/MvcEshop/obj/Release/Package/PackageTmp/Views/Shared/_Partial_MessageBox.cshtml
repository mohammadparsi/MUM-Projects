@model MvcEshop.ViewModels.User.MessageContentViewModel

<div class="inputControlWrapper">
    @if (Model.MessageType == Infrastructure.Enums.MessageTypes.success)
    {
        <div class="alert alert-success" style="font-weight:bold;">
            <span class="glyphicon glyphicon-ok" style="color:orange;font-weight:bold; font-size:20px; margin-left:25px;"></span>
            @Html.Raw(Model.Message)
        </div>
    }

    @if (Model.MessageType == Infrastructure.Enums.MessageTypes.failure)
    {
        <div class="alert alert-danger">
            <span class="glyphicon glyphicon-remove" style="color:red;font-weight:bold; font-size:20px; margin-left:25px;"></span>
            @Html.Raw(Model.Message)
        </div>
    }

</div>

