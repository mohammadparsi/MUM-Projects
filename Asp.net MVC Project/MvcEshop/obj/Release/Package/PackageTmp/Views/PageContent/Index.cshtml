@model IEnumerable<MvcEshop.Models.Page>

@{
    ViewBag.Title = Resources.DisplayNames.List + " " +
        Resources.DisplayNames.Pages;

    ViewBag.LayoutType = "Grid";

    System.Web.HttpContext.Current.Session["CurrentSiteMap"] = string.Empty;
}


<a href="/PageContent/ChooseNewSlideShowImages" class="btn btn-primary" role="button">
    @Resources.DisplayNames.ChooseNewSlideShowImages
</a>
<div class="k-rtl">



    @(Html.Kendo().Grid(Model)
              .Name("Grid")
              .Columns(columns =>
                  {
                      columns.Bound(model => model.PageTitle).Title(Resources.DisplayNames.Title).Width(60);


                      columns.Bound(item => @item.PageId).Title(Resources.DisplayNames.Edit).Filterable(false).Groupable(false)
                                                           .Template(@<text>

                            <a href="/PageContent/EditContent?pageId=@item.PageId">
                                <img src="~/Content/Files/Icons/edit-file-icon.png" />
                            </a>

                                                        </text>).Width(40);

                  })
    )



</div>