@model MvcEshop.Models.Assignment

@{
    ViewBag.Title = Resources.DisplayNames.Delete+ " " + Resources.DisplayNames.Assignment;
    ViewBag.LayoutType = "DataEntryForm";
}


<div class="container">
    <div class="col-md-6">
        <div class="panel panel-danger ">
            <div class="panel-heading">
                <div class="panel-title">
                    <div class="container" style="font-weight:bold;">
                        <span class="glyphicon glyphicon-remove" style="color:red;font-weight:bold; font-size:20px; margin-left:20px;"></span>
                        آیا از حذف این مورد اطمینان دارید؟
                    </div>
                </div>
            </div>
            <div class="panel-body">

                <div class="form-horizontal text-center">
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, new { @class = "panelBodyTitles" })
                        :
                        @Html.DisplayFor(model => model.Title)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PointValue, new { @class = "panelBodyTitles" })
                        :
                        @Html.DisplayFor(model => model.PointValue)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DisplayStartDate, new { @class = "panelBodyTitles" })
                        :
                        @Html.DisplayFor(model => model.DisplayStartDate)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DisplayDueDate, new { @class = "panelBodyTitles" })
                        :
                        @Html.DisplayFor(model => model.DisplayDueDate)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DisplayPostDate, new { @class = "panelBodyTitles" })
                        :
                        @Html.DisplayFor(model => model.DisplayPostDate)
                    </div>

                    <div class="form-group">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()


                         Guid? guidClassId = ViewBag.ClassId;
                        
                         <input type="submit" value="تأیید" class="submit" />
                        @Html.ActionLink("بازگشت به فهرست", MVC.Assignment.Index(guidClassId))

                        }
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>


