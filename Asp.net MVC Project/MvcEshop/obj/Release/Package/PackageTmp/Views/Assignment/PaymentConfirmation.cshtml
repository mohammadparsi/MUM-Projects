@model MvcEshop.ViewModels.Assignment.PaymentConfirmationViewModel

@{
    ViewBag.Title = Resources.DisplayNames.Confirmation + " " + Resources.DisplayNames.Payment;
    ViewBag.LayoutType = "DataEntryForm";
}



<form action="http://Payment.irandoc.ac.ir/Payment/PaymentAction" method="post">
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.SysId)
        @Html.HiddenFor(model => model.Username)
        @Html.HiddenFor(model => model.Email)
        @Html.HiddenFor(model => model.Amount)
        @Html.HiddenFor(model => model.Fp)
        @Html.HiddenFor(model => model.TimeStamp)
        @Html.HiddenFor(model => model.FactorNum)
        <br />
        <div class="alert alert-success" style="font-weight:bold">
            <div class="container form-group">
                <div class="col-md-3">
                    @Resources.DisplayNames.PaymentAmount:
                </div>
                <div class="col-md-1">
                    @Model.Amount
                </div>
            </div>

            <div class="form-group" id="buttons">
                <div class="FormButtonControlWrapper">
                    <input type="submit" value="تأیید" class="submit" />
                </div>
            </div>
        </div>

        
    </div>
</form>



