@model MvcEshop.ViewModels.User.ChangePasswordViewModel

@{
    ViewBag.Title = Resources.DisplayNames.ChangePassword;
    ViewBag.LayoutType = "DataEntryForm";

    System.Web.HttpContext.Current.Session["CurrentSiteMap"] = string.Empty;
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.PreviousPassword, new { @class = "control-label col-md-2" })
            <div class="inputControlWrapper">
                @Html.EditorFor(model => model.PreviousPassword)
                <div class="validationMessage">
                    @Html.ValidationMessageFor(model => model.PreviousPassword)
                </div>
            </div>
        </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NewPassword, new { @class = "control-label col-md-2" })
                <div class="inputControlWrapper">
                    @Html.EditorFor(model => model.NewPassword)
                    <div class="validationMessage">
                        @Html.ValidationMessageFor(model => model.NewPassword)
                    </div>
                </div>
            </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmNewPassword, new { @class = "control-label col-md-2" })
            <div class="inputControlWrapper">
                @Html.EditorFor(model => model.ConfirmNewPassword)
                <div class="validationMessage">
                    @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
                </div>
            </div>
        </div>

        <div class="form-group" id="buttons">
            <div class="FormButtonControlWrapper">
                <input type="submit" value=@Resources.DisplayNames.Save class="submit" />
            </div>
        </div>
    </div>
}

