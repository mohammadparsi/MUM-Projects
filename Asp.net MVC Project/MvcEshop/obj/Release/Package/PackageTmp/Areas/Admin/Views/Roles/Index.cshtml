
@model IEnumerable<MvcEshop.Models.Roles>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@(Html.Kendo().Grid(Model)
              .Name("Grid")
              .Columns(columns =>
                  {
                      columns.Bound(model => model.RoleTitle);
                      columns.Bound(model => model.RoleNameInSystem);
                      columns.Bound(model => model.CreateDate);
                      columns.Bound(item => @item.RoleID).Title("دستورات").Filterable(false).Groupable(false)
                              .Template(@<text>
                            @Html.ActionLink("ویرایش", "Edit", new { id = @item.RoleID }, new { @class = "k-button k-button-icontext k-grid-Edit" })
                            @Html.ActionLink("حذف", "Delete", new { id = @item.RoleID }, new { @class = "k-button k-button-icontext k-grid-Delete" })
                            </text>).Width(200);
                  })
                                    .ToolBar(toolbar =>
                                                {
                                                    toolbar.Custom().Action("Create", "Roles").Text("افزودن");
                                                }
                                    )
                                    .Groupable()
                                    .Pageable()
                                    .Sortable()
                                    .Scrollable()
                                    .Filterable()
                                    .DataSource(dataSource => dataSource
                                                                .Server()

                                                                .Model(model => model.Id(item => item.RoleID))
                                                )
)