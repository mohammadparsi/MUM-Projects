@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "User", FormMethod.Post, new { id = "logoutForm", @class = "navbar-left" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            
            <li><a href="javascript:document.getElementById('logoutForm').submit()">@Resources.DisplayNames.SignOut</a></li>
        </ul>
    }
}
else
{
    
    @* <li>@Html.ActionLink("ثبت نام", "Index", "Home", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
