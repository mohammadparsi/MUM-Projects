@model MvcEshop.ViewModels.Tariff.EditViewModel

@{
    ViewBag.Title = Resources.DisplayNames.Edit + " " + Resources.DisplayNames.Tariff;
    ViewBag.LayoutType = "DataEntryForm";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.TariffTypeId, new { @class = "control-label col-md-2" })
            <div class="inputControlWrapper">
                @Html.DropDownList("TariffTypeId", Resources.DisplayNames.Select)
                <div class="validationMessage">
                    @Html.ValidationMessageFor(model => model.TariffTypeId)
                </div>
            </div>
        </div>

        
        <div class="form-group">
            @Html.LabelFor(model => model.IrandocTariffInRials, new { @class = "control-label col-md-2" })
            <div class="inputControlWrapper">
                @Html.TextBoxFor(model => model.IrandocTariffInRials)
                <div class="validationMessage">
                    @Html.ValidationMessageFor(model => model.IrandocTariffInRials)
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InternetTariffInRials, new { @class = "control-label col-md-2" })
            <div class="inputControlWrapper">
                @Html.TextBoxFor(model => model.InternetTariffInRials)
                <div class="validationMessage">
                    @Html.ValidationMessageFor(model => model.InternetTariffInRials)
                </div>
            </div>
        </div>

        <div class="form-group" id="buttons">
            <div class="FormButtonControlWrapper">
                <input type="submit" value="ذخیره" class="submit" />
                
            </div>
        </div>
    </div>
}

@section scripts
{
    @Html.Partial("_Partial_DatePicker", 0)
}




