@model MvcEshop.ViewModels.User.EnrollInClassViewModel

@{
    ViewBag.Title = Resources.DisplayNames.EnrollInClass;
    ViewBag.LayoutType = "DataEntryForm";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.ClassId, new { @class = "control-label col-md-2" })
            <div class="inputControlWrapper">
                @Html.EditorFor(model => model.ClassId)
                <div class="validationMessage">
                    @Html.ValidationMessageFor(model => model.ClassId)
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EnrollmentPassword, new { @class = "control-label col-md-2" })
            <div class="inputControlWrapper">
                @Html.EditorFor(model => model.EnrollmentPassword)
                <div class="validationMessage">
                    @Html.ValidationMessageFor(model => model.EnrollmentPassword)
                </div>
            </div>
        </div>

        <div class="form-group" id="buttons">
            <div class="FormButtonControlWrapper">
                <input type="submit" value="ثبت" class="submit" />
            </div>
        </div>
    </div>
}

