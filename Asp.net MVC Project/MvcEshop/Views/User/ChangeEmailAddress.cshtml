@model MvcEshop.ViewModels.User.ChangeEmailAddressViewModel

@{
    ViewBag.Title = string.Format("تغییر {0}", Resources.DisplayNames.Email);
    ViewBag.LayoutType = "DataEntryForm";

    System.Web.HttpContext.Current.Session["CurrentSiteMap"] = string.Empty;
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.NewEmail, new { @class = "control-label col-md-2" })
            <div class="inputControlWrapper">
                @Html.EditorFor(model => model.NewEmail)
                <div class="validationMessage">
                    @Html.ValidationMessageFor(model => model.NewEmail)
                </div>
            </div>
        </div>

        <div class="form-group" id="buttons">
            <div class="FormButtonControlWrapper">
                <input type="submit" value="ثبت" class="submit" />
				@*@Html.ActionLink("بازگشت به فهرست", "Index")*@
            </div>
        </div>
    </div>
}

