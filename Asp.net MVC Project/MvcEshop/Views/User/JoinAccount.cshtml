@model MvcEshop.ViewModels.User.JoinAccountViewModel

@{
    ViewBag.Title = Resources.DisplayNames.JoinAccount;
    ViewBag.LayoutType = "DataEntryForm";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.AccountId, new { @class = "control-label col-md-2" })
            <div class="inputControlWrapper">
                @Html.EditorFor(model => model.AccountId)
                <div class="validationMessage">
                    @Html.ValidationMessageFor(model => model.AccountId)
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JoinPassword, new { @class = "control-label col-md-2" })
            <div class="inputControlWrapper">
                @Html.EditorFor(model => model.JoinPassword)
                <div class="validationMessage">
                    @Html.ValidationMessageFor(model => model.JoinPassword)
                </div>
            </div>
        </div>

        <div class="form-group" id="buttons">
            <div class="FormButtonControlWrapper">
                <input type="submit" value="ثبت" class="submit" />
            </div>
        </div>
    </div>
}

