		</div>
	</div>

	<div class="field">
		<div class="caption">
			@Html.DisplayNameFor(model => model.Width)
		</div>
		<div class="controls">
			@Html.DisplayFor(model => model.Width)
		</div>
	</div>

	<div class="field">
