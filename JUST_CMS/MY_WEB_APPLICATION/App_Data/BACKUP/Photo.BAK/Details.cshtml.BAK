	</div>

	<div class="field">
		<div class="caption">
			@Html.DisplayNameFor(model => model.Keywords)
		</div>
		<div class="controls">
			@Html.DisplayFor(model => model.Keywords)
		</div>
	</div>

	<div class="field">
		<div class="caption">
			@Html.DisplayNameFor(model => model.InsertDateTime)
		</div>
		<div class="controls">
			@Html.DisplayDateTime(Model.InsertDateTime, displayTime: true)
