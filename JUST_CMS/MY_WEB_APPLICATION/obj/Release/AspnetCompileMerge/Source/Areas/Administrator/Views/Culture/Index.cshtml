@using Infrastructure

@model IEnumerable<Models.Culture>

@{
	string strTitle =
		string.Format("{0} {1}",
		Resources.Actions.ListOf,
		Models.Resources.MyCulture.EntitiesName);

	ViewBag.Title = strTitle;
}

<div class="panel panel-primary">
	<div class="panel-heading">
		@strTitle
	</div>
	<div class="panel-body">
		<div class="table-responsive">
			<table class="table table-striped table-bordered table-hover table-condensed">
				<tr>
					<th style="width: 100px;">
						&nbsp;
					</th>
					<th>
						@Html.DisplayNameFor(model => model.IsActive)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Ordering)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Lcid)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Name)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.NativeName)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.DisplayName)
					</th>
					<th>
						@Models.Resources.BaseEntity.InsertAndUpdateDateTime
					</th>
				</tr>

				@foreach (var item in Model)
				{
					string strRowStyle =
						Infrastructure.Utility.GetRowStyle(item);

					<tr class="@strRowStyle">
						<td>
							@Html.ActionLink(Resources.Actions.Edit,
								MVC.Administrator.Culture.Edit(item.Id))
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.IsActive)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Ordering)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Lcid)
						</td>
						<td style="direction: ltr">
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td style="direction: ltr">
							@Html.DisplayFor(modelItem => item.NativeName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.DisplayName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.InsertDateTime)
							<br />
							@Html.DisplayFor(modelItem => item.UpdateDateTime)
						</td>
					</tr>
				}
			</table>
		</div>
	</div>
</div>
