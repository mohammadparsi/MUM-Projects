<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<meta name="author" content="@ViewBag.Author" />
	<meta name="robots" content="@ViewBag.Robots" />
	<meta name="keywords" content="@ViewBag.Keywords" />
	<meta name="copyright" content="@ViewBag.Copyright" />
	<meta name="description" content="@ViewBag.Description" />
	<meta name="classification" content="@ViewBag.Classification" />
	<meta name="google-site-verification" content="@ViewBag.GoogleSiteVerification" />

	<meta name="generator" content="Mr. Dariush Tasdighi" />

	<title>@ViewBag.Title</title>

	<script src="~/Scripts/jquery-2.1.1.min.js"></script>
	<script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>

	<script src="~/Scripts/bootstrap.min.js"></script>

	<script src="~/Scripts/kendo/2014.1.318/kendo.web.min.js"></script>

	<script src="~/Scripts/jquery.validate.min.js"></script>
	<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
	<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

	<script src="~/Scripts/dtxRequired.js"></script>
	<script src="~/Scripts/accounting.min.js"></script>
	<script src="~/Scripts/dtxDisplayPageMessages.js"></script>

	<link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />

	<link href="~/Content/kendo/2014.1.318/kendo.common-bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/kendo/2014.1.318/kendo.bootstrap.min.css" rel="stylesheet" />

	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

	<style>
		body {
			background-repeat: repeat-x;
			background-attachment: fixed;
			background-position: left top;
			background-image: url(../../Content/_Layouts/default.fa-IR/Images/Background.gif);
			/* It is necessary for navbar-fixed-top */
			/*padding-top: 60px;*/
		}

		* {
			direction: ltr;
			text-align: left;
			font-family: Verdana;
		}

		h1, h2, h3, h4, h5, h6 {
			direction: rtl;
			text-align: right;
			font-family: Tahoma;
		}

		/* Styles for validation helpers */
		.field-validation-error {
			color: #ff0000;
		}

		.field-validation-valid {
			display: none;
		}

		.input-validation-error {
			border: 1px solid #ff0000;
			background-color: #ffeeee;
		}

		.validation-summary-errors {
			color: #ff0000;
		}

		.validation-summary-valid {
			display: none;
		}
		/* /Styles for validation helpers */
	</style>

	@if (IsSectionDefined(name: "headSection"))
	{
		@RenderSection(name: "headSection")
	}
</head>
<body>
	<div class="container">
		<div class="row clearfix">
			<div class="col-md-12 column">
				<nav class="navbar navbar-inverse" role="navigation" style="z-index: 10000">
					<div class="container">
						<div class="navbar-header navbar-left">
							<a class="navbar-brand" href="#">@Infrastructure.ApplicationSettings.Instance.ApplicationName</a>
						</div>

						<ul class="nav navbar-nav navbar-left">
							<li><a href="~/Home/Index">Home</a></li>
							<li><a href="~/Home/About">About</a></li>
							<li><a href="~/Home/Contact">Contact</a></li>

							@if (Infrastructure.ApplicationSettings.Instance.CanUserSearchTheOthers)
							{
								<li><a href="~/User/Index">Users</a></li>
							}

							@Html.Partial(MVC.Shared.Views._Partial_DisplayPostCategorySubMenu)

							@*<li class="dropdown">
									<a href="#" class="dropdown-toggle" data-toggle="dropdown">خدمات و محصولات<b class="caret"></b></a>
									<ul class="dropdown-menu" role="menu">
										<li><a href="#">زيرسيستم يک</a></li>
										<li><a href="#">زيرسيستم دو</a></li>
										<li class="divider"></li>
										<li><a href="#">زيرسيستم سه</a></li>
										<li><a href="#">زيرسيستم چهار</a></li>
										<li><a href="#">زيرسيستم پنج</a></li>
									</ul>
								</li>*@
						</ul>

						<ul class="nav navbar-nav navbar-right">
							@Html.Partial(MVC.Shared.Views._Partial_ChangeCulture)
						</ul>

						<ul class="nav navbar-nav navbar-right">
							@Html.Partial(MVC.Shared.Views._Partial_UserLoginStatus)
						</ul>
					</div>
				</nav>
			</div>
		</div>
	</div>

	@Html.Partial(MVC.Shared.Views._Partial_DisplayMenu)

	<div class="container">
		<div class="row clearfix">
			<div class="col-md-12 column">
				<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
					<ol class="carousel-indicators">
						<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
						<li data-target="#carousel-example-generic" data-slide-to="1"></li>
						<li data-target="#carousel-example-generic" data-slide-to="2"></li>
					</ol>

					<div class="carousel-inner">
						<div class="item active">
							<img src="~/Content/_Layouts/default.fa-IR/Images/Banner01.png" />
							<div class="carousel-caption">
								...
							</div>
						</div>

						<div class="item">
							<img src="~/Content/_Layouts/default.fa-IR/Images/Banner02.png" />
							<div class="carousel-caption">
								...
							</div>
						</div>

						<div class="item">
							<img src="~/Content/_Layouts/default.fa-IR/Images/Banner03.png" />
							<div class="carousel-caption">
								...
							</div>
						</div>
					</div>

					<a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
						<span class="glyphicon glyphicon-chevron-left"></span>
					</a>
					<a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
						<span class="glyphicon glyphicon-chevron-right"></span>
					</a>
				</div>
			</div>
		</div>
	</div>

	<div class="container">
		<div class="row clearfix">
			<div class="col-md-12 column">
				@Html.Partial(MVC.Shared.Views._Partial_DisplayLocalizedPageContent)
			</div>
		</div>
	</div>

	<div class="container">
		<div class="row clearfix">
			<div class="col-md-12 column">
				@Html.Partial(MVC.Shared.Views._Partial_DisplayPageMessages)

				@RenderBody()
			</div>
		</div>
	</div>

	<br />
	<br />
	<br />
	<br />
	<br />

	<nav class="navbar navbar-inverse navbar-fixed-bottom" role="navigation" style="z-index: 10000">
		<div class="container-fluid">
			<a class="navbar-brand" href="http://www.Tasdighi.com">
				Mr. Dariush Tasdighi Copyright
			</a>
		</div>
	</nav>
</body>
</html>
