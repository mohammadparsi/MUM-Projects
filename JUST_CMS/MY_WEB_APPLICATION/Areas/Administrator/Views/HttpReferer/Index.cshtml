@using Infrastructure

@model IEnumerable<Models.HttpReferer>

@{
	string strTitle =
		string.Format("{0} {1}",
		Resources.Actions.ListOf,
		Models.Resources.HttpReferer.EntitiesName);

	ViewBag.Title = strTitle;
}

<div class="panel panel-primary">
	<div class="panel-heading">
		@strTitle
	</div>
	<div class="panel-body">
		<div class="table-responsive">
			<table class="table table-striped table-bordered table-hover table-condensed">
				<tr>
					<th style="width: 100px;">
						&nbsp;
					</th>
					<th style="width: 100px;">
						@Html.DisplayNameFor(model => model.IsPublic)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Name)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.DomainName)
					</th>
					<th style="width: 100px;">
						@Html.DisplayNameFor(model => model.Hits)
					</th>
					<th style="width: 160px;">
						@Html.DisplayNameFor(model => model.FirstHitDateTime)
					</th>
					<th style="width: 160px;">
						@Html.DisplayNameFor(model => model.LastHitDateTime)
					</th>
				</tr>

				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.ActionLink(Resources.Actions.Edit,
							MVC.Administrator.HttpReferer.Edit(item.Id))
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.IsPublic)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td style="direction: ltr">
							<a href="@item.Url" target="_blank">@item.DomainName</a>
						</td>
						<td>
							@Dtx.Text.Convert.DisplayFormattedNumber(item.Hits)
						</td>
						<td>
							@Html.DisplayDateTime(item.FirstHitDateTime, displayTime: true)
						</td>
						<td>
							@Html.DisplayDateTime(item.LastHitDateTime, displayTime: true)
						</td>
					</tr>
				}
			</table>
		</div>
	</div>
</div>
